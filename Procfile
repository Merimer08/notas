web: sh -lc 'mkdir -p /workspace/storage/{database,framework/cache,framework/sessions,framework/views,logs} && [ -f /workspace/storage/database/database.sqlite ] || touch /workspace/storage/database/database.sqlite && chmod -R 777 /workspace/storage bootstrap/cache && php artisan optimize:clear && php artisan storage:link || true && php artisan migrate --force --seed && php artisan serve --host 0.0.0.0 --port $PORT'
